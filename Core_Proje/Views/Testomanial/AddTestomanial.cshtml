@model EntityLayer.Concrete.Testomanial
@{
    ViewData["Title"] = "AddTestomanial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}




<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Ekleme Sayfası</h3>
</div>
@using (Html.BeginForm("AddTestomanial", "Testomanial", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Referans Ekleme Sayfası </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>İsim</label>
                        <input type="text" class="form-control" name="ClientName">
                    </div>
                    <div class="form-group">
                        <label>Şirket</label>
                        <input type="text" class="form-control" name="Company">
                    </div>
                    <div class="form-group">
                        <label>Yorum</label>
                        <input type="text" class="form-control" name="Comment">
                    </div>
                    <div class="form-group">
                        <label>Resim URL</label>
                        <input type="text" class="form-control" name="ImageUrl">
                    </div>
                    <div class="form-group">
                        <label>Unvan</label>
                        <input type="text" class="form-control" name="Title">
                    </div>
                   
                    <button class="btn btn-success">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
}


