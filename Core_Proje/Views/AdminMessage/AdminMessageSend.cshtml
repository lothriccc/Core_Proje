@model EntityLayer.Concrete.WriterMessage
@{
	ViewData["Title"] = "AdminMessageSend";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<p class="card-description"> Admin Mesaj Gönderme Ssyfası </p>
			<form class="forms-sample" method="post">
				<div class="form-group">
					<label>Konu</label>
					@Html.TextBoxFor(x=>x.Subject, new {@class ="form-control"})
				</div>
				<div class="form-group">
					<label>Alıcı</label>
					@Html.TextBoxFor(x=>x.Reciever, new {@class ="form-control"})
				</div>
				<div class="form-group">
					<label>Mesaj</label>
					@Html.TextAreaFor(x=>x.MessageContent,8,3, new {@class ="form-control"})
				</div>
				
				<button class="btn btn-success">Gönder</button>
			</form>
		</div>
	</div>
</div>

